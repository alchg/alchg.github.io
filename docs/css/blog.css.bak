html {
	background: silver;
}
body {
	margin: 0px;
	font-size: xx-large;
}
header {
	background: darkslateblue;
	padding: 5px;
	display: flex;
}
header > div > img {
	height: 100%;
	max-height: 204px;
}
header > div.title {
	align-self: center;
}
header > div > a {
	font-size: xxx-large;
	color: white;
	padding: 10px;
}
div#menu {
	padding: 10px;
}
div#content {
	width: 90%;
	padding: 10px;
}
div.content_item {
	background: lightyellow;
}
code {
	background: cadetblue;
	color: lightyellow;
	padding: 3px;
}
footer {
	background: darkslateblue;
	padding: 5px;
}
@media(min-width: 1100px){
	body {
		font-size: medium;
	}
	header {
		height: 5%;
	}
	div#main {
		display: flex;
	}
	div#menu {
		width: 25%;
		overflow: auto;
	}
	div#content {
		margin: 10px;
	}
	footer {
		height: 5%;
		bottom: 0;
	}
}
